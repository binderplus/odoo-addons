<?xml version="1.0" encoding="utf-8"?>

<openerp>
<data>

    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <data>
                <!-- Add header -->
                <xpath expr="/form/*" position="before">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                </xpath>
                <!-- Form -->
                <xpath expr="//page[@string='HR Settings']" position="inside">
                    <group>
                		<group string="Contrato" name="contract_group">
    	                    <field name="start_date_real"/>
    	                    <field name="start_date"/>
    	                    <field name="end_date" attrs="{'invisible':[('state','not in',('resigned','fired','retired'))]}"/>
    	                    <field name="end_reason" attrs="{'invisible':[('state','not in',('resigned','fired'))]}"/>
    		            </group>
    		            <group string="Convenio" name="convenio_group">
    		            	<field name="union_id"/>
    		            	<field name="union_category_id"/>
    		            	<field name="union_is_affiliated"/>
    		            </group>
                    </group>
                </xpath>
            </data>
        </field>
    </record>

    <record id="hr_employee_view_form_hide_odoo_fields" model="ir.ui.view">
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <data>
            	<!-- Hide some fields -->
            	<field name="passport_id" position="attributes">
            		<attribute name="invisible">1</attribute>
            	</field>
                <field name="work_location" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            	<field name="company_id" position="attributes">
            		<attribute name="invisible">1</attribute>
            	</field>
                <field name="coach_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="country_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            	<!-- Hide address_home_id (and whole group) -->
            	<xpath expr="//field[@name='address_home_id']/parent::group" position="attributes">
            		<attribute name="invisible">1</attribute>
            	</xpath>
            </data>
        </field>
    </record>

</data>
</openerp>
